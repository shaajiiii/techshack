<!DOCTYPE html>
<html lang="en">

<%- include('../partials/admin-head.ejs')%>

    <body>

        
        <!-- home page with USERS LIST -->

        <%- include('../partials/admin-navbar.ejs')%>
        <!-- NAV END -->
        <h1 style="color: white;margin: 2rem;">Users</h1>

        <div class="container">
           

        <table class="col-sm-12 mt-5 table table-dark align-middle mb-0 " style="color:rgb(255, 255, 255) ;">
            <thead >
              <tr >
                <th>Name</th>
                <th>Mobile</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>

              <% users.forEach(element=> { %>

                <tr>
                    <td>
                      <div class="d-flex align-items-center">
                        <% if (element.userimg){ %>
                          <img
                          src=""
                          class="rounded-circle"
                          alt=""
                          style="width: 45px; height: 45px"
                          />
                         
  
                       <% }else{ %>
                        <img
                        src="/images/icons/default_user.png"
                        class="rounded-circle"
                        alt=""
                        style="width: 45px; height: 45px"
                        />
                        
  
                      <%  } %>
                       
                        <div class="ms-3">
                          <p class="fw-bold mb-0"> <%= element.username %> </p>
                          <p class="mb-0 " style="color: rgb(201, 201, 201) ;"> <%= element.email %></p>
                        </div>
                      </div>
                    </td>

                    <td>
                        <p class="mt-3"> <%= element.mobile %></p>
                    </td>


                    
                    <td>
                      <% if (element.status){ %>
                        <span class="badge rounded-pill d-inline" style="border: solid 2px rgb(34, 215, 34) ;color:rgb(34, 215, 34) ;">Active</span>

                     <% }else{ %>
                      <span class="badge rounded-pill d-inline" style="border: solid 2px red ;color:red ;">Blocked</span>

                    <%  } %>
                       
                       
                    </td>
                   
                    <td>
                        <!-- <a href=""><img src="/images/icons/edit.png" alt="" style="width: 30px; height: 30px;"></a>
                        <a href=""><img src="/images/icons/delete.png" alt="" style="width: 25px; height: 25px;"></a> -->


                       

                        

                        <% if (element.status){ %>
                          <a href="/admin/block-user/<%= element.username %>"><img src="/images/icons/blockLock.png" alt="" style="width: 40px; height: 40px;"></a>
  
                       <% }else{ %>
                        <a href="/admin/unblock-user/<%= element.username %>"><img src="/images/icons/unblockLock.png" alt="" style="width: 40px; height: 40px;"></a>
  
                      <%  } %>


                    </td>
                  </tr>

                  <% }); %>
          
              
            </tbody>
          </table>



       
        </div>

    

    </body>

</html>